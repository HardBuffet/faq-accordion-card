include ../../pug/abstracts/variables/faq-card-simple.js.pug

-
  const listContent = [
    {
      "title": "How many team members can I invite?",
      "desc": "You can invite up to 2 additional users on the Free plan. There is no limit on team members for the Premium plan.",
    },
    {
      "title": "What is the maximum file upload size?",
      "desc": "No more than 2GB. All files in your account must fit your allotted storage space.",
    },
    {
      "title": "How do I reset my password?",
      "desc": "Click “Forgot password” from the login page or “Change password” from your profile page. A reset link will be emailed to you.",
    },
    {
      "title": "Can I cancel my subscription?",
      "desc": "Click “Yes! Send us a message and we’ll process your request no questions asked.",
    },{
      "title": "Do you provide additional support?",
      "desc": "Chat and email support is available 24/7. Phone lines are open during normal business hours.",
    },
  ];

div(class=faqCardSimple.getComponent().name)
    h2(class=faqCardSimple.getComponent().el.title) FAQ
    ul(class=faqCardSimple.getComponent().el.list)
      each item, key in listContent
        li(class=faqCardSimple.getComponent().el.item)
          button(class=`${faqCardSimple.getComponent().el.button} ${faqCardSimple.modOn('active', false, 'button')}`)= listContent[key].title
            img(src="images/icon-arrow-down.svg" width="10" height="7" alt="")
          p(class=faqCardSimple.getComponent().el.desc)= listContent[key].desc
